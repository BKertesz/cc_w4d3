<h2>All the pizzas!</h2>
<hr/>
<% @orders.each do |order| %>
<!-- <p>Id: <%= order.id  %> -->
<p>Name: <%= order.pretty_name %></p>
<p>Order: <%= order.quantity %> X <%= order.topping %></p>
<p><a href='/pizza_orders/<%= order.id %>'>Show order</a></p>
<p><form method='post' action='/pizza_orders/<%= order.id%>/delete'>
  <input type='submit' value='Delete Order'>
</form></p>
<p><form method='get' action='/pizza_orders/<%= order.id%>/edit'>
  <input type='submit' value='Edit'>
</form></p>
<hr/>
<% end %>
